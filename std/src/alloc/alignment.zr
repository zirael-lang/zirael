import "../option.zr"

/// Represents a memory alignment requirement.
/// 
/// Alignment values must be powers of two and non-zero.
struct Alignment {
    value: int,

    fn new(align: int): Option<Alignment> {
        if align != 0 && (align & (align - 1)) == 0) {
            Option::Some(Alignment {
                value: align
            })
        } else {
            Option::None
        }
    }
}